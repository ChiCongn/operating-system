<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="320.0" stylesheets="@dialog.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bankeranddeadlockdetector.banker.AddRequestController">
    <children>
        <Button fx:id="confirmButton" layoutX="110.0" layoutY="105.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" styleClass="brown_button" text="Ok">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
      <HBox prefHeight="50.0" prefWidth="320.0">
         <children>
              <Label alignment="CENTER" contentDisplay="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="110.0" styleClass="black-text-Cabin-bold" text="Process name:" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
                  <font>
                      <Font name="System Bold" size="12.0" />
                  </font>
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
              </Label>
            <TextField fx:id="processName" prefHeight="30.0" prefWidth="120.0">
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox layoutY="52.0" prefHeight="40.0" prefWidth="320.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="110.0" styleClass="black-text-Cabin-bold" text="Request:" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="request" prefHeight="30.0" prefWidth="120.0">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
    </children>
</AnchorPane>
